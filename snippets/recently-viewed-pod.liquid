{% comment %}
  Recently Viewed Products Container
  Displays products that the customer has recently viewed
  Populated by recently-viewed-pod.js
  
  Usage: {% render 'recently-viewed-pod' %}
{% endcomment %}

<div id="recently-viewed-products" class="page-width" style="display: none; margin: 3rem auto;">
  {%- comment -%} Content will be injected by JavaScript {%- endcomment -%}
</div>

<style>
/* Recently Viewed Products Component */
.recently-viewed-pod {
  padding: 2rem 0;
}

.recently-viewed-pod__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.recently-viewed-pod__title {
  font-size: 1.75rem;
  font-weight: 700;
  margin: 0;
  color: rgb(var(--color-foreground));
}

.recently-viewed-pod__clear {
  padding: 0.5rem 1rem;
  background: transparent;
  border: 1px solid rgba(var(--color-foreground), 0.2);
  border-radius: 6px;
  font-size: 0.875rem;
  font-weight: 600;
  color: rgba(var(--color-foreground), 0.6);
  cursor: pointer;
  transition: all 0.3s ease;
}

.recently-viewed-pod__clear:hover {
  background: rgba(var(--color-foreground), 0.05);
  border-color: rgba(var(--color-foreground), 0.4);
  color: rgb(var(--color-foreground));
}

.recently-viewed-pod__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1.5rem;
}

/* Product Card */
.recently-viewed-card {
  display: flex;
  flex-direction: column;
  background: white;
  border: 1px solid rgba(var(--color-foreground), 0.1);
  border-radius: 12px;
  overflow: hidden;
  text-decoration: none;
  transition: all 0.3s ease;
}

.recently-viewed-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  border-color: rgb(99, 102, 241);
}

.recently-viewed-card__image {
  position: relative;
  width: 100%;
  padding-top: 100%;
  overflow: hidden;
  background: rgba(var(--color-foreground), 0.05);
}

.recently-viewed-card__image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.recently-viewed-card:hover .recently-viewed-card__image img {
  transform: scale(1.05);
}

.recently-viewed-card__info {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.recently-viewed-card__title {
  font-size: 0.9375rem;
  font-weight: 600;
  margin: 0;
  color: rgb(var(--color-foreground));
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.recently-viewed-card__price {
  font-size: 1rem;
  font-weight: 700;
  color: rgb(99, 102, 241);
}

/* Mobile Responsive */
@media screen and (max-width: 749px) {
  .recently-viewed-pod__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  
  .recently-viewed-pod__title {
    font-size: 1.5rem;
  }
  
  .recently-viewed-card__info {
    padding: 0.75rem;
  }
  
  .recently-viewed-card__title {
    font-size: 0.875rem;
  }
  
  .recently-viewed-card__price {
    font-size: 0.9375rem;
  }
}

@media screen and (min-width: 750px) and (max-width: 989px) {
  .recently-viewed-pod__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (min-width: 990px) {
  .recently-viewed-pod__grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media screen and (min-width: 1200px) {
  .recently-viewed-pod__grid {
    grid-template-columns: repeat(5, 1fr);
  }
}
</style>
