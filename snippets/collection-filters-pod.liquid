{% comment %}
  Enhanced Collection Filters Component
  Improved filtering UI with visual tags, color swatches, and clear selections
  
  Usage: Replaces default facets functionality
{% endcomment %}

{{ 'component-facets.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign filter_count = 0
  for filter in results.filters
    if filter.type == 'price_range'
      if filter.min_value.value or filter.max_value.value
        assign filter_count = filter_count | plus: 1
      endif
    else
      assign filter_count = filter_count | plus: filter.active_values.size
    endif
  endfor
-%}

<div class="collection-filters-pod" data-collection-filters>
  {%- comment -%} Active Filters Summary Bar {%- endcomment -%}
  {%- if filter_count > 0 -%}
    <div class="active-filters-bar">
      <div class="active-filters-bar__header">
        <span class="active-filters-bar__count">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
          </svg>
          {{ filter_count }} {% if filter_count == 1 %}filter{% else %}filters{% endif %} active
        </span>
        <a href="{{ results.url }}" class="active-filters-bar__clear">
          Clear all
        </a>
      </div>
      
      <div class="active-filters-bar__tags">
        {%- for filter in results.filters -%}
          {%- if filter.type == 'price_range' -%}
            {%- if filter.min_value.value or filter.max_value.value -%}
              <a href="{{ filter.url_to_remove }}" class="active-filter-tag">
                <span class="active-filter-tag__label">{{ filter.label }}:</span>
                <span class="active-filter-tag__value">
                  {{ filter.min_value.value | default: 0 | money }} - {{ filter.max_value.value | default: filter.range_max | money }}
                </span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            {%- endif -%}
          {%- else -%}
            {%- for value in filter.active_values -%}
              <a href="{{ value.url_to_remove }}" class="active-filter-tag">
                <span class="active-filter-tag__label">{{ filter.label }}:</span>
                <span class="active-filter-tag__value">{{ value.label }}</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            {%- endfor -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}

  {%- comment -%} Filter Panels {%- endcomment -%}
  <div class="collection-filters-pod__panels">
    {%- for filter in results.filters -%}
      <div class="filter-panel" data-filter-type="{{ filter.type }}">
        <button 
          type="button" 
          class="filter-panel__toggle"
          data-filter-toggle
          aria-expanded="true"
        >
          <span class="filter-panel__title">{{ filter.label }}</span>
          <svg class="filter-panel__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>

        <div class="filter-panel__content" data-filter-content>
          {%- case filter.type -%}
            {%- when 'list' -%}
              {%- comment -%} Standard checkbox list {%- endcomment -%}
              <div class="filter-list">
                {%- for value in filter.values -%}
                  <label class="filter-list__item">
                    <input
                      type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      class="filter-list__checkbox"
                    >
                    <span class="filter-list__label">
                      {{ value.label }}
                      <span class="filter-list__count">({{ value.count }})</span>
                    </span>
                  </label>
                {%- endfor -%}
              </div>

            {%- when 'price_range' -%}
              {%- comment -%} Price range slider {%- endcomment -%}
              <div class="filter-price-range">
                <div class="filter-price-range__inputs">
                  <div class="filter-price-range__input-wrapper">
                    <label for="Filter-{{ filter.label }}-Min">Min</label>
                    <input
                      type="number"
                      id="Filter-{{ filter.label }}-Min"
                      name="{{ filter.min_value.param_name }}"
                      value="{{ filter.min_value.value | default: 0 }}"
                      min="0"
                      max="{{ filter.range_max }}"
                      step="1"
                      class="filter-price-range__input"
                      placeholder="{{ 0 | money }}"
                    >
                  </div>
                  <span class="filter-price-range__separator">â€“</span>
                  <div class="filter-price-range__input-wrapper">
                    <label for="Filter-{{ filter.label }}-Max">Max</label>
                    <input
                      type="number"
                      id="Filter-{{ filter.label }}-Max"
                      name="{{ filter.max_value.param_name }}"
                      value="{{ filter.max_value.value | default: filter.range_max }}"
                      min="0"
                      max="{{ filter.range_max }}"
                      step="1"
                      class="filter-price-range__input"
                      placeholder="{{ filter.range_max | money }}"
                    >
                  </div>
                </div>
              </div>
          {%- endcase -%}
        </div>
      </div>
    {%- endfor -%}

    {%- comment -%} Sort Options {%- endcomment -%}
    <div class="filter-panel">
      <button 
        type="button" 
        class="filter-panel__toggle"
        data-filter-toggle
        aria-expanded="true"
      >
        <span class="filter-panel__title">Sort by</span>
        <svg class="filter-panel__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </button>

      <div class="filter-panel__content" data-filter-content>
        <div class="filter-sort">
          {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
          {%- for option in results.sort_options -%}
            <label class="filter-sort__item">
              <input
                type="radio"
                name="sort_by"
                value="{{ option.value }}"
                {% if option.value == sort_by %}checked{% endif %}
                class="filter-sort__radio"
              >
              <span class="filter-sort__label">{{ option.name }}</span>
            </label>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>

  {%- comment -%} Mobile Filter Button {%- endcomment -%}
  <button type="button" class="collection-filters-pod__mobile-trigger" data-mobile-filters-trigger>
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
    </svg>
    Filters
    {%- if filter_count > 0 -%}
      <span class="badge">{{ filter_count }}</span>
    {%- endif -%}
  </button>
</div>

<style>
  .collection-filters-pod {
    margin-bottom: 2rem;
  }

  /* Active Filters Bar */
  .active-filters-bar {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(236, 72, 153, 0.05) 100%);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .active-filters-bar__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .active-filters-bar__count {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    color: rgb(99, 102, 241);
  }

  .active-filters-bar__clear {
    font-size: 0.875rem;
    color: rgb(239, 68, 68);
    text-decoration: none;
    font-weight: 600;
  }

  .active-filters-bar__clear:hover {
    text-decoration: underline;
  }

  .active-filters-bar__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .active-filter-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: var(--gradient-nurse-coffee-subtle);
    border: 1px solid rgba(236, 72, 153, 0.3);
    border-radius: 20px;
    font-size: 0.8125rem;
    text-decoration: none;
    color: rgb(236, 72, 153);
    transition: all 0.3s ease;
    transform: translateZ(0);
  }

  .active-filter-tag:hover {
    background: var(--gradient-nurse-coffee);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(236, 72, 153, 0.3);
  }

  .active-filter-tag__label {
    font-weight: 600;
  }

  .active-filter-tag svg {
    width: 14px;
    height: 14px;
  }

  /* Filter Panels */
  .collection-filters-pod__panels {
    display: grid;
    gap: 1rem;
  }

  .filter-panel {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    overflow: hidden;
  }

  .filter-panel__toggle {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: transparent;
    border: none;
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
    transition: background 0.3s ease;
  }

  .filter-panel__toggle:hover {
    background: rgba(99, 102, 241, 0.05);
  }

  .filter-panel__toggle[aria-expanded="false"] .filter-panel__icon {
    transform: rotate(-90deg);
  }

  .filter-panel__icon {
    transition: transform 0.3s ease;
    color: rgb(99, 102, 241);
  }

  .filter-panel__content {
    padding: 0 1.25rem 1.25rem;
    max-height: 300px;
    overflow-y: auto;
  }

  .filter-panel__toggle[aria-expanded="false"] + .filter-panel__content {
    display: none;
  }

  /* Filter List */
  .filter-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .filter-list__item {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .filter-list__checkbox {
    width: 20px;
    height: 20px;
    margin-right: 0.75rem;
    cursor: pointer;
    accent-color: rgb(99, 102, 241);
  }

  .filter-list__label {
    flex: 1;
    display: flex;
    justify-content: space-between;
    font-size: 0.9375rem;
  }

  .filter-list__count {
    color: rgba(var(--color-foreground), 0.5);
    font-size: 0.875rem;
  }

  /* Price Range */
  .filter-price-range__inputs {
    display: flex;
    align-items: flex-end;
    gap: 1rem;
  }

  .filter-price-range__input-wrapper {
    flex: 1;
  }

  .filter-price-range__input-wrapper label {
    display: block;
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .filter-price-range__input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    font-size: 0.9375rem;
  }

  .filter-price-range__separator {
    padding-bottom: 0.75rem;
    color: rgba(var(--color-foreground), 0.5);
  }

  /* Sort Options */
  .filter-sort {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .filter-sort__item {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .filter-sort__radio {
    width: 20px;
    height: 20px;
    margin-right: 0.75rem;
    cursor: pointer;
    accent-color: rgb(99, 102, 241);
  }

  .filter-sort__label {
    font-size: 0.9375rem;
  }

  /* Mobile */
  .collection-filters-pod__mobile-trigger {
    display: none;
  }

  @media screen and (max-width: 989px) {
    .collection-filters-pod__panels {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1000;
      background: white;
      overflow-y: auto;
      padding: 1rem;
    }

    .collection-filters-pod__panels.active {
      display: block;
    }

    .collection-filters-pod__mobile-trigger {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      width: 100%;
      padding: 1rem;
      background: rgb(99, 102, 241);
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      font-size: 1rem;
    }

    .collection-filters-pod__mobile-trigger .badge {
      background: white;
      color: rgb(99, 102, 241);
      padding: 0.125rem 0.5rem;
      border-radius: 12px;
      font-size: 0.75rem;
      font-weight: 700;
    }
  }
</style>

<script>
(function() {
  // Toggle filter panels
  document.addEventListener('click', (e) => {
    const toggle = e.target.closest('[data-filter-toggle]');
    if (toggle) {
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', !isExpanded);
    }

    // Mobile filters trigger
    const mobileTrigger = e.target.closest('[data-mobile-filters-trigger]');
    if (mobileTrigger) {
      const panels = document.querySelector('.collection-filters-pod__panels');
      panels.classList.toggle('active');
    }
  });

  // Auto-submit on filter change
  document.addEventListener('change', (e) => {
    const filterInput = e.target.closest('.filter-list__checkbox, .filter-sort__radio, .filter-price-range__input');
    if (filterInput) {
      // Debounce for price inputs
      if (filterInput.classList.contains('filter-price-range__input')) {
        clearTimeout(window.filterDebounce);
        window.filterDebounce = setTimeout(() => {
          applyFilters();
        }, 500);
      } else {
        applyFilters();
      }
    }
  });

  function applyFilters() {
    const url = new URL(window.location.href);
    const searchParams = new URLSearchParams(url.search);

    // Collect all filter values
    const checkboxes = document.querySelectorAll('.filter-list__checkbox:checked');
    const radios = document.querySelectorAll('.filter-sort__radio:checked');
    const priceInputs = document.querySelectorAll('.filter-price-range__input');

    // Clear existing filter params
    for (const [key] of searchParams.entries()) {
      if (key.startsWith('filter.') || key === 'sort_by') {
        searchParams.delete(key);
      }
    }

    // Add checkbox filters
    checkboxes.forEach(checkbox => {
      searchParams.append(checkbox.name, checkbox.value);
    });

    // Add sort
    radios.forEach(radio => {
      searchParams.set(radio.name, radio.value);
    });

    // Add price range
    priceInputs.forEach(input => {
      if (input.value) {
        searchParams.set(input.name, input.value);
      }
    });

    // Navigate to new URL
    window.location.href = `${url.pathname}?${searchParams.toString()}`;
  }
})();
</script>
